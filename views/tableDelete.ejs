<!-- views/table.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Details Deletion</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
<div class="container mt-5">
    <h1 class="mb-4">Student Details</h1>
    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
        <tr>
            <th>Name</th>
            <th>Roll Number</th>
            <th>Email</th>
            <th>Department</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        <% details.forEach(detail => { %>
            <tr id="row-<%= detail._id %>">
                <td><%= detail.name %></td>
                <td><%= detail.rollNumber %></td>
                <td><%= detail.email %></td>
                <td><%= detail.department %></td>
                <td>
                    <form action="/delete/<%= detail._id %>" method="GET">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        <% }); %>
        </tbody>
    </table>
    <button id="back" class="btn btn-danger col-2 mt-2">Back</button>
</div>
<script>
    document.getElementById('back').addEventListener('click', () => {
        window.open('http://localhost:8000', '_self');
    }, false);
</script>
</body>
</html>
